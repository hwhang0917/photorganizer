extends layouts/main

block content
    .form-container
        h1.form__title Upload Image
        form(action=`/dashboard${routes.imageUpload}`, method="post", enctype="multipart/form-data")
            div.fileUpload
                label(for="file") Photo
                input(type="file", id="file", name="imageFile", accept="image/*", required)
            input.input__text(type="text", placeholder="Location", name="place", required)
            input(type="submit", value="Upload Photo")
            