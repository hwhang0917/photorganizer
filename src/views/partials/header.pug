            a(href="/").header__logo-title-link
                img(src="/static/design/logo.png", alt="Photorganizer Logo").logo
                h1.header__title Photorganizer
        else
            a(href="/dashboard").header__logo-title-link
                img(src="/static/design/logo.png", alt="Photorganizer Logo").logo
                h1.header__title Photorganizer
    .header__column
        if(landingPage)
            a(href="https://github.com/hwhang0917/photorganizer").header__link About
            a(href="#").header__link Desktop App
