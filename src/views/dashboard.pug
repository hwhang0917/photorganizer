extends layouts/main
include mixins/thumbnail

block content
    .dashboard
        if (term)
            h3.dashboard__title Searching photos from "#{term}"
        .grid-container
            if images.length == 0
                
                div.dashboard__no-img 
                    i.fas.fa-exclamation-triangle
                    span No Photos Found
            each image in images
                +thumbnail({
                    id: image.id,
                    src: image.fileUrl
                })
        